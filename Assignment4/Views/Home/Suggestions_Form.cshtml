@{
    ViewBag.Title = "Suggest a Restaurant";
}

@model Assignment4.Models.Suggestion

<h1>Submit one of your favorites!</h1>

<form method="post" asp-action="Suggestions_Form">
    <div>
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" />
    </div>
    <br />
    <div>
        <label asp-for="Restaurant_Name">Restaurant Name:</label>
        <input asp-for="Restaurant_Name" />
    </div>
    <br />
    <div>
        <label asp-for="Favorite_Dish">Favorite Dish:</label>
        <input asp-for="Favorite_Dish" />
    </div>
    <br />
    <div>
        <label asp-for="Restaurant_Phone">Restaurant Phone:</label>
        <input asp-for="Restaurant_Phone" />
    </div>


    <button type="submit">Submit</button>

    <div asp-validation-summary="All"></div>
</form>