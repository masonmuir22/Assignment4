@{
    ViewBag.Title = "List of Suggested Restaurants";
}

@model IEnumerable<Assignment4.Models.Suggestion>

<div>
    <h2>List of Suggestions</h2>

    <table>
        <thead>
            <tr><th>Name</th><th>Restaurant Name</th><th>Favorite Dish</th><th>Restaurant Phone</th></tr>
        </thead>

        <tbody>
            @foreach (Assignment4.Models.Suggestion x in Model)
            {
                <tr>
                    <td>@x.Name</td>
                    <td>@x.Restaurant_Name</td>
                    <td>@x.Favorite_Dish</td>
                    <td>@x.Restaurant_Phone</td>
                </tr>
            }
        </tbody>

    </table>
</div>
